@{
    ViewData["Title"] = "Home Page";
}

@model IndexViewModel

<div class="first-five row w-100">
    <div class="big-one col-6">
        <img src="@Model.ActualPosts.First().Photos.First().Patch" style="width: 700px;">
        <div class="caption">
            <ul class="badge-ul">
                <li class="badge-li">
                    <a class="badge-a" href="#">
                        <span class="badge-span">@Model.ActualPosts.First().Category.First().Name</span>
                    </a>
                </li>
            </ul>
            <div class="h1 h1_custom">
                <a class="a_custom" href="#">
                    @Model.ActualPosts.First().Name
                </a>
            </div>
            <div class="under_h4">
                <div>
                    <a class="post-meta-time" href="#">
                        <time datetime="2020-06-06">@Model.ActualPosts.First().Date</time>
                    </a>
                </div>
            </div>
        </div>
    </div>
    <div class="lil-news-columns">
        @foreach (var item in Model.ActualPosts.Skip(1))
        {
            <div>
                <img src="@item.Photos.First().Patch" style="height: 250px;">
                <div class="caption">
                    <ul class="badge-ul">
                        <li class="badge-li">
                            <a class="badge-a" href="#">
                                <span class="badge-span">@item.Category.First().Name</span>
                            </a>
                        </li>
                    </ul>
                    <div class="h4 h4_custom">
                        <a class="a4_custom" href="#">
                            @item.Name
                        </a>
                    </div>
                    <div class="under_h4">
                        <div>
                            <a class="post-meta-time" href="#">
                                <time datetime="2020-06-06">@item.Date</time>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
    @await Component.InvokeAsync("PopularPosts")
    <div class="latest-news">
        <div class="head-devider">
            <h2 class="popular_news_head pb-0">
                Latest News
            </h2>
        </div>
        @foreach (var item in Model.LatestPosts)
        {
            <form class="latest-news-content">
                <div class="unit">
                    <div class="img">
                        <div class="" style="position: relative; top: 20px;">
                            <ul class="badge-ul">
                                <li class="badge-li">
                                    <a class="badge-a" href="#">
                                        <span class="badge-span">@item.Category.First().Name</span>
                                    </a>
                                </li>
                            </ul>
                            <img class="center" src="@item.Photos.First().Patch" style="width: 150px; margin-bottom: 30px;">
                        </div>
                    </div>

                    <div class="text-block" style="position: relative;">
                        <a class="news_name" href="#">
                            @item.Name
                        </a>
                        <p class="description" style="width: 500px;">
                            @item.Content.Substring(0, item.Content.IndexOf('.') + 1)
                        </p>
                        <div class="row d-flex flex-row" style="margin-top: 60px; margin-left: 39px;">
                            <div class="under_description" style="width: max-content">
                                <div>
                                    <a class="post-meta-time_desc" href="#">
                                        <time class="desc-time" datetime="2020-06-06">@item.Date</time>
                                    </a>
                                </div>
                            </div>
                            <div style="width: max-content;">
                                <a class="post-meta-comment" href="#">
                                    @item.Comments.Count
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="devider-dashed" style="width: 100%; margin: 35px;"></div>
            </form>
        }
    </div>
    <div class="world-news">
        <div class="head-devider">
            <h2 class="popular_news_head pb-0">
                World news
            </h2>
        </div>
        @foreach (var item in Model.WorldPosts.Take(1))
        {
            <form class="world-news-content">
                <div class="unit">
                    <div class="img">
                        <div class="" style="position: relative; top: 20px;">
                            <ul class="badge-ul">
                                <li class="badge-li">
                                    <a class="badge-a" href="#">
                                        <span class="badge-span">@item.Category.First().Name</span>
                                    </a>
                                </li>
                            </ul>
                            <img class="center" src="@item.Photos.First().Patch" style="width: 400px; margin-bottom: 30px;">
                        </div>
                    </div>
                    <div class="text-block col-6">
                        <a class="news_name h4" href="#">
                            @item.Name
                        </a>
                        <div class="row d-flex flex-row" style="margin-top: 30px; margin-left: 3px; width: 70%;">
                            <p style="width: max-content; padding:0; color: black; font-family: 'Noto Serif'; font-style: italic; font-size: 17px;">
                                <div class="under_description" style="width: max-content; margin-top: 2px; left: 5px;">
                                    <div>
                                        <a class="post-meta-time_desc" href="#">
                                            <time class="desc-time" datetime="2020-06-06">@item.Date</time>
                                        </a>
                                    </div>
                                </div>
                                <div style="width: max-content; margin-top: -2px;">
                                    <a class="post-meta-comment" href="#">
                                        @item.Comments.Count
                                    </a>
                                </div>
                        </div>
                        <p class="description" style="width: 500px; height: auto; word-wrap: break-word;">
                            @item.Content.Substring(0, item.Content.IndexOf('.') + 1)
                        </p>
                        <div class="d-flex flex-row" style="margin-top: 40px; width: 50%;">
                            <a class="btn btn-warning">Read more</a>
                        </div>
                    </div>
                </div>
                <div class="devider-dashed" style="width: 100%; margin: 35px;"></div>
                @foreach (var item1 in Model.WorldPosts.Skip(1).Take(2))
                {
                    <div class="row">
                        <div class="col-6">
                            <div class="unit">
                                <div class="img">
                                    <div class="" style="position: relative; top: 20px;">
                                        <img class="center" src="@item1.Photos.First().Patch"
                                             style="width: 160px; margin-bottom: 30px;">
                                    </div>
                                </div>
                                <div class="text-block col-8">
                                    <a class="news_name h4" href="#" style="font-size: 27px;">
                                        @item1.Name
                                    </a>
                                    <div class="row d-flex flex-row" style="margin-top: 15px; margin-left: -15px; width: 70%;">
                                        <div class="under_description" style="width: max-content; margin-top: 2px; left: 5px;">
                                            <div>
                                                <a class="post-meta-time_desc" href="#">
                                                    <time class="desc-time" datetime="2020-06-06">2h ago</time>
                                                </a>
                                            </div>
                                        </div>
                                        <div style="width: max-content; margin-top: -2px;">
                                            <a class="post-meta-comment" href="#">
                                                @item.Comments.Count
                                            </a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="devider-dashed" style="width: 95%; margin: 35px;"></div>
                        </div>

                    </div>
                }
            </form>
        }
    </div>
